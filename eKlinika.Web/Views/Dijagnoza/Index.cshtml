@model eKlinika.ViewModels.UstanovljenaDijagnozaIndexVM


<div class="container-fluid paddingRight0 paddinLeft0">
    @if (Model.ustanovljeneDijagnoze.Count == 0)
    {
        <div class="col-md-12 text-center alert-warning">
            <h3>Nema dodanih dijagnoza</h3>
        </div>

    }
    else
    {
        <div class="col-md-12 noPaddingClass">
            <table class="noPaddingClass table">
                <thead>
                <th class="text-center">Naziv</th>
                <th class="text-center">Akcija</th>
                </thead>
                <tbody>
                    @foreach (var item in Model.ustanovljeneDijagnoze)
                    {
                        <tr>
                            <td>@item.Dijagnoza.Opis</td>
                            <td class="text-right">
                                <a class="btn btn-success" asp-action="DijagnozaDetails" asp-controller="Dijagnoza" asp-route-Id="@item.Id" ajax-poziv="da" ajax-rezultat="rezDiv">Detalji</a>
                                <a class="btn btn-danger " asp-action="Ukloni" asp-controller="Dijagnoza" asp-route-Id="@item.Id" ajax-poziv="da" ajax-rezultat="rezDiv">Ukloni</a>
                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>

    }

    <div class="col-md-12 noPaddingClass marginTop1em">
        <a asp-controller="Dijagnoza" asp-action="Dodaj" asp-route-Id="@Model.PregledId" ajax-poziv="da" ajax-rezultat="rezDiv" class="btn btn-danger pull-right ">Dodaj</a>
    </div>
</div>
