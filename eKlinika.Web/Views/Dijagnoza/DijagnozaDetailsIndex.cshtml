@model List<eKlinika.Models.UstanovljenaDijagnoza>


<div class="container-fluid paddingRight0 paddinLeft0">
    @if (Model.Count == 0)
    {
        <div class="col-md-12 text-center alert-warning">
            <h3>Nema dodanih dijagnoza</h3>
        </div>
    }
    else
    {
        <div class="col-md-12 noPaddingClass">
            <table class="noPaddingClass table">
                <thead>
                <th class="text-center">Naziv</th>
                <th class="text-center">Akcija</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Dijagnoza.Opis</td>
                            <td class="text-right">
                                <a class="btn btn-success" asp-action="DijagnozaDetails" asp-controller="Dijagnoza" asp-route-Id="@item.Id" ajax-poziv="da" ajax-rezultat="rezDiv">Detalji</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
