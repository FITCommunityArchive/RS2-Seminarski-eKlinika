@model eKlinika.ViewModels.NarudzbaDodajVM
    <br />
<div class="row" style="margin: 40px 0 0 400px;">
    <form asp-controller="Apoteka" asp-action="DodajNarudzbu" method="post"style="position: absolute; border: solid black 5px;" class="col-md-3">
        <div class="form-group" style="margin-top: 20px;">
            <label asp-for="@Model.DatumNarudzbe"></label>
            <input asp-for="@Model.DatumNarudzbe" class="form-control" readonly />
            <span asp-validation-for="@Model.DatumNarudzbe"></span>
        </div>

    <div class="form-group">
        <label asp-for="@Model.DobavljacId"></label>
        <select asp-for="@Model.DobavljacId" asp-items="@Model.Dobavljaci" class="form-control"></select>
        <span asp-validation-for="@Model.DobavljacId"></span>
    </div>
       
       <div class="form-group">
            <label asp-for="@Model.LijekId"></label>
            <select asp-for="@Model.LijekId" asp-items="@Model.Lijekovi" class="form-control"></select>
            <span asp-validation-for="@Model.LijekId"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Kolicina"></label>
            <input asp-for="@Model.Kolicina" class="form-control"/>
            <span asp-validation-for="@Model.Kolicina"></span>
        </div>
        <input type="submit" class="btn btn-danger" value="Kreiraj" style="margin-bottom: 20px;"/>
    </form>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}