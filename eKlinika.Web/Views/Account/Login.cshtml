@model eKlinika.ViewModels.LoginVM
@{
    var login_error = TempData["login_error"];
    ViewData["Title"] = "Login";
}
    
<div class="row col-md-3" style="margin: 100px 0 0 420px;">
    <form asp-controller="Account" asp-action="Login" method="post" style="border: solid black 5px; border-radius: 5%;">
        <div class="form-group" style="margin: 10px 10px 10px 10px;">
            <label asp-for="@Model.Username"></label>
            <input asp-for="@Model.Username" class="form-control"/>
            <span asp-validation-for="@Model.Username"></span>
        </div>

        <div class="form-group"style="margin: 0 10px 0 10px;">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Password"></span>
        </div>

        <input type="submit" class="btn btn-danger" value="Sign In" style="margin: 10px 10px 10px 10px;"/>
        @if(login_error != null)
        {
        <div class="alert alert-danger text-center">@login_error</div>
        }
    </form>
</div>