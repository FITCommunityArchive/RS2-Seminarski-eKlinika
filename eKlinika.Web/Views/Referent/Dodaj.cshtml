@model eKlinika.ViewModels.PacijentVM
@{

}

<div class="container mainContainer">

    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Dodavanje novog pacijenta</h1>
        </div>
    </div>
    <form asp-action="Dodaj" asp-controller="Referent" enctype="multipart/form-data">
        <div class="container dodajFormContainerUpper">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-offset-3 col-xs-offset-2 col-sm-8 ">
                    <div class="col-md-12 col-xs-10">
                        <img id="blah" src="~/images/default-profile-photo.png" alt="Image" class="img-thumbnail col-md-12 " style="padding:0; height:18em;" />
                        <label class="btn btn-default btn-file col-md-12 col-xs-12 ">
                            Browse<input type='file' id="imgInp" name="imgInp"  style="display:none" />
                        </label>
                    </div>


                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.JMBG">JMBG</label>
                    <input asp-for="@Model.JMBG" class="form-control  col-md-12" type="text" placeholder="Unesite JMBG pacijenta" required />
                    <span asp-validation-for="@Model.JMBG"></span>
                </div>

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Ime">Ime</label>
                    <input asp-for="@Model.Ime" class="form-control  col-md-12" type="text" placeholder="Unesite ime pacijenta" maxlength="20" required />
                    <span asp-validation-for="@Model.Ime"></span>
                </div>

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Prezime">Prezime</label>
                    <input asp-for="@Model.Prezime" class="form-control  col-md-12" type="text" placeholder="Unesite prezime pacijenta" maxlength="20" required />
                    <span asp-validation-for="@Model.Prezime"></span>
                </div>
            </div>

            <div class="row">

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.DatumRodjenja">Datum rodjenja</label>
                    <input asp-for="@Model.DatumRodjenja" class="form-control  col-md-12" type="date" required />
                    <span asp-validation-for="@Model.DatumRegistracije"></span>
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Telefon">Telefon</label>
                    <input asp-for="@Model.Telefon" type="text" class="form-control col-md-12" placeholder="Unesite telefon pacijenta" required />
                    <span asp-validation-for="@Model.Telefon"></span>
                </div>

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Spol">Spol</label>
                    <select asp-for="@Model.Spol" asp-items="@Model.Spolovi" class="form-control col-md-12"></select>
                    <span asp-validation-for="@Model.Spol"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Ulica">Ulica</label>
                    <input asp-for="@Model.Ulica" type="text" class="form-control col-md-12" placeholder="Unesite ulicu pacijenta" required />
                    <span asp-validation-for="@Model.Ulica"></span>
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Broj">Broj</label>
                    <input asp-for="@Model.Broj" type="text" class="form-control col-md-12" placeholder="Unesite broj ulice" required />
                    <span asp-validation-for="@Model.Broj"></span>
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.GradId">Grad</label>
                    <select asp-for="@Model.GradId" asp-items="@Model.Gradovi" class="form-control col-md-12"></select>
                    <span asp-validation-for="@Model.GradId"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.BrojKnjizice">Broj knjizice</label>
                    <input asp-for="@Model.BrojKnjizice" type="text" class="form-control col-md-12" placeholder="Unesite broj knjizice pacijenta" required />
                    <span asp-validation-for="@Model.BrojKnjizice"></span>
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.BrojKartona">Broj kartona</label>
                    <input asp-for="@Model.BrojKartona" type="text" class="form-control col-md-12" placeholder="Unesite broj kartona" required />
                    <span asp-validation-for="@Model.BrojKartona"></span>
                </div>


                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.DatumRegistracije">Datum registracije</label>
                    <input asp-for="@Model.DatumRegistracije" type="date" class="form-control col-md-12" disabled />
                    <span asp-validation-for="@Model.DatumRegistracije"></span>
                </div>

            </div>
        </div>
        <div class=" container dodajFormContainerLower">
            <div class="row">
                <div class="col-md-6" style="padding-left:0; padding-right:0">
                    <div class="col-md-12 form-group">
                        <label asp-for="@Model.Visina">Visina</label>
                        <input asp-for="@Model.Visina" type="number" step="1" class="form-control" placeholder="Unesite visinu pacijenta" required />
                        <span asp-validation-for="@Model.Visina"></span>
                    </div>

                    <div class="col-md-12 col-sm-12 form-group">
                        <label asp-for="@Model.Tezina">Tezina</label>
                        <input asp-for="@Model.Tezina" type="number" class="form-control" placeholder="Unesite tezinu pacijenta" required />
                        <span asp-validation-for="@Model.Tezina"></span>
                    </div>
                </div>

                <div class="col-md-6" style="padding-right:0;padding-left:0">
                    <div class="col-md-12 col-sm-12 form-group">
                        <label asp-for="@Model.SpecijalniZahtjevi">Specijalni zahtjevi</label>
                        <textarea asp-for="@Model.SpecijalniZahtjevi" type="text" style="height:7.7em" class="form-control col-md-12" placeholder="Unesite specijalne zahtjeve pacijenta" ></textarea>
                    </div>
                </div>


            </div>

            <div class="row">

                <div class="col-md-6 col-sm-12 form-group">
                    <label asp-for="@Model.KrvnaGrupaId">Krvna grupa</label>
                    <select asp-for="@Model.KrvnaGrupaId" asp-items="@Model.KrvneGrupe" class="form-control col-md-12"></select>
                    <span asp-validation-for="@Model.KrvnaGrupaId"></span>
                </div>
                <div class="col-md-6 col-sm-12 form-group">
                    <label asp-for="@Model.Alergije">Alergije</label><br />
                    <input asp-for="@Model.Alergije" type="text" class="form-control col-md-12" placeholder="Unesite alergije pacijenta" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-sm-0"></div>
                <div class="col-md-2 col-sm-12" style="margin-bottom: 1em;">
                    <input type="submit" class="btn btn-danger col-md-12 " value="Spremi" />
                </div>
            </div>
        </div>
    </form>
</div>