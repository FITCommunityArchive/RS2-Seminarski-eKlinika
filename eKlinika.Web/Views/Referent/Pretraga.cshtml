@model eKlinika.ViewModels.PacijentPretragaVM
@{ 
   int i = 1;
}

<div class="container">

    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Pretraga pacijenata</h1>
        </div>
    </div>
    <div class="container">

        <form>
            <div class="row form-group">
                <label asp-for="@Model.Text" class="col-md-1" style="vertical-align:middle;">Pretraga:</label>
                <div class="col-md-5">
                    <input asp-for="@Model.Text" class="form-control" />
                    <label style="font-size:10px;">(unesite ime i prezime pacijenta)</label>
                </div>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-search icons-margin-right"></i> Traži
                </button>
            </div>
        </form>
        <div class="row">
            <table class="table table-condensed">
                <thead>
                <th scope="row"></th>
                <th scope="row">Ime i prezime</th>
                <th scope="row">Datum rodjenja</th>
                <th scope="row">Akcija</th>
                </thead>
                <tbody>
                    @foreach (var item in Model.Pacijenti)
                    {
                        <tr>
                            <th>@i</th>
                            @{
                                i += 1;
                            }
                            <td>@(item.Korisnici.Ime + " " + item.Korisnici.Prezime)</td>
                            <td>@item.Korisnici.DatumRodjenja</td>
                            <td>
                                <a asp-action="Detalji" asp-controller="Referent" asp-route-PacijentId="@item.Id" class="btn btn-danger"><i class="fas fa-user icons-margin-right"></i>Profil</a>
                                <a asp-action="Uredi" asp-controller="Referent" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-wrench icons-margin-right"></i>Uredi</a>
                                <a asp-action="Izbrisi" asp-controller="Referent" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt icons-margin-right"></i>Obriši</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>