@model List<eKlinika.ViewModels.PreglediIndexVM>
@{
    ViewData["Title"] = "Popis rezervisanih termina";
}

<div class="container" style="position:absolute;">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Popis rezervisanih termina</h1>
        </div>
    </div>

    <div class="row" style="background-color: white; ">

        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Datum pregleda</th>
                    <th>Vrijeme pregleda</th>
                    <th>Doktor</th>
                    <th>Pacijent</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DatumPregleda.Date.ToShortDateString()</td>
                        <td>@item.DatumPregleda.ToShortTimeString()</td>
                        <td>@item.Doktor</td>
                        <td>@item.Pacijent</td>
                        <td>
                            <a class="btn btn-success" asp-action="EvidencijaPregleda" asp-controller="Pregledi" asp-route-Id="@item.Id">Evidentiraj</a>
                            <a class="btn btn-danger" asp-action="Otkazi" asp-controller="Pregledi" asp-route-Id="@item.Id">Otkazi</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-danger" asp-action="RezervacijaTermina" asp-controller="Pregledi">Rezervacija termina</a>
            </div>
        </div>
    </div>

</div>