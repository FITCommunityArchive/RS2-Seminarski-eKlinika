@model eKlinika.ViewModels.PreglediPretragaVM
@{

}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Pretraga pacijenata</h1>
        </div>
    </div>
    <div class="container">
        <form asp-action="Pretraga" asp-controller="Pregledi">
            <div class="row form-group">
                <label asp-for="@Model.Doktor" class="col-md-1" style="vertical-align:middle;">Pretraga:</label>
                <div class="col-md-3">
                    <input asp-for="@Model.Doktor" class="form-control" placeholder="Unesite ime doktora" />
                </div>
                <div class="col-md-3">
                    <input asp-for="@Model.Pacijent" class="form-control" placeholder="Unesite ime pacijenta" />
                </div>              
                <div class="col-md-3">
                    <input asp-for="@Model.Datum" type="date" class="form-control" placeholder="Unesite datum pregleda" />
                </div>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-search icons-margin-right"></i> Traži
                </button>
            </div>
        </form>
        <div class="row">
            <table class="table table-condensed">
                <thead>
                <th>Doktor</th>
                <th>Pacijent</th>
                <th>Datum pregleda</th>
                <th>Akcija</th>
                </thead>
                <tbody>
                    @foreach (var item in Model.Pregledi)
                    {
                        <tr>
                            <td>@(item.Doktor.Osoblje.Korisnici.Ime+" "+ item.Doktor.Osoblje.Korisnici.Prezime)</td>
                            <td>@(item.Pacijent.Korisnici.Ime+" "+ item.Pacijent.Korisnici.Ime)</td>
                            <td>@(item.DatumPregleda.ToString("dd.MM.yyyy"))</td>
                            <td><a asp-action="Details" asp-controller="Pregledi" asp-route-Id="@item.Id" class="btn btn-danger">Detalji</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>