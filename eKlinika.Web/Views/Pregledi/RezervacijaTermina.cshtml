@model eKlinika.ViewModels.TerminRezervacijaVM
@{

}

<div class="container" style="position:absolute;">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Rezervacija novog termina</h1>
        </div>
    </div>
    <form asp-action="RezervacijaTermina" asp-controller="Pregledi" class="form-horizontal">
        <div class="row form-group">
            <div class="col-md-1 col-md-offset-3 rezevacijaAlignment">
                <label asp-for="@Model.DoktorId" class="control-label"> Doktor: </label>
            </div>
            <div class="col-md-4" style="padding:0;">
                <select asp-for="@Model.DoktorId" asp-items="@Model.Doktori" id="doktoriSel" class="form-control col-md-19 dropdown"></select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 col-md-offset-2 rezevacijaAlignment">
                <label asp-for="@Model.MedicinskaSestraId" class="control-label"> Medicinska sestra: </label>
            </div>

            <div class="col-md-4" style="padding:0;">
                <select asp-for="@Model.MedicinskaSestraId" asp-items="@Model.MedSestre" class="form-control col-md-12 dropdown"></select>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 col-md-offset-2 rezevacijaAlignment">
                <label asp-for="@Model.PacijentId" class="control-label"> Pacijent: </label>
            </div>

            <div class="col-md-4" style="padding:0;">
                <select asp-for="@Model.PacijentId" asp-items="@Model.Pacijenti" class="form-control col-md-12 dropdown"></select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 col-md-offset-2 rezevacijaAlignment">
                <label asp-for="@Model.TipPregleda" class="control-label"> Tip pregleda: </label>
            </div>

            <div class="col-md-4" style="padding:0;">
                <select asp-for="@Model.TipPregleda" asp-items="@Model.TipoviPregleda" class="form-control col-md-12 dropdown"></select>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-2 col-md-offset-2 rezevacijaAlignment">

                <label asp-for="@Model.DatumTermina" class="control-label">Datum:</label>
            </div>
            <div id="date" class="input-group date form_date col-md-4" data-date="" data-date-format="dd MM yyyy" data-link-field="dateInp" data-link-format="yyyy-mm-dd">
                <input class="form-control" size="16" type="text" value="" readonly>
                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
            <input id="dateInp" asp-for="@Model.DatumTermina" hidden /><br />
        </div>
        <div class=" row form-group">
            <div class="col-md-2 col-md-offset-2 rezevacijaAlignment">
                <label for="@Model.VrijemeTermina" class=" control-label">Vrijeme:</label>
            </div>
            <div class="input-group date form_time col-md-4" data-date="" id="time" data-date-format="hh:ii" data-link-field="timeInp" data-link-format="hh:ii">
                <input class="form-control" size="16" type="text" value="" readonly>
                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
            </div>
            <input id="timeInp" asp-for="@Model.VrijemeTermina" hidden /><br />
        </div>
        <div class="row">
            <div class="col-md-10 col-sm-0"></div>
            <div class="col-md-2 col-sm-12" style="margin-bottom: 1em;">
                <input type="submit" class="btn btn-danger col-md-12 " value="Rezervisi" />
            </div>
        </div>
    </form>
</div>
