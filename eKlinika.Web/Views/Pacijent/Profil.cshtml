@model eKlinika.Models.Pacijent
@{

}

<div class="container mainContainer">

    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Moj profil</h1>
        </div>
    </div>
        <div class="container dodajFormContainerUpper">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-offset-3 col-xs-offset-2 col-sm-8 ">
                    <div class="col-md-12 col-xs-10">
                        <img id="blah" src="@Url.Content("/"+Model.Korisnici.Slika)" alt="Image" class="img-thumbnail col-md-12 " style="padding:0; height:18em;" />
                    </div>


                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.JMBG">JMBG:</label>
                    <input asp-for="@Model.Korisnici.JMBG" class="form-control  col-md-12" type="text" disabled />
                </div>

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Ime">Ime</label>
                    <input asp-for="@Model.Korisnici.Ime" class="form-control  col-md-12" type="text" disabled />
                </div>

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Prezime">Prezime</label>
                    <input asp-for="@Model.Korisnici.Prezime" class="form-control  col-md-12" type="text" disabled />
                </div>
            </div>

            <div class="row">

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.DatumRodjenja">Datum rodjenja</label>
                    <input asp-for="@Model.Korisnici.DatumRodjenja" class="form-control  col-md-12" type="date" disabled />
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Telefon">Telefon</label>
                    <input asp-for="@Model.Korisnici.Telefon" type="text" class="form-control col-md-12" disabled />
                </div>

                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Spol">Spol</label>
                    <input asp-for="@Model.Korisnici.Spol" type="text" class="form-control col-md-12" disabled />

                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Ulica">Ulica</label>
                    <input asp-for="@Model.Korisnici.Ulica" type="text" class="form-control col-md-12" disabled />
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Broj">Broj</label>
                    <input asp-for="@Model.Korisnici.Broj" type="text" class="form-control col-md-12" disabled/>
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.Korisnici.Grad">Grad</label>
                    <input asp-for="@Model.Korisnici.Grad.Naziv" type="text" class="form-control col-md-12" disabled/>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.BrojKnjizice">Broj knjizice</label>
                    <input asp-for="@Model.BrojKnjizice" type="text" class="form-control col-md-12"disabled />
                </div>
                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.BrojKartona">Broj kartona</label>
                    <input asp-for="@Model.BrojKartona" type="text" class="form-control col-md-12" disabled />
                </div>


                <div class="col-md-4 col-sm-12 form-group">
                    <label asp-for="@Model.DatumRegistracije">Datum registracije</label>
                    <input asp-for="@Model.DatumRegistracije" type="date" class="form-control col-md-12" disabled />
                </div>

            </div>
        </div>
        <div class=" container dodajFormContainerLower">
            <div class="row">
                <div class="col-md-6" style="padding-left:0; padding-right:0">
                    <div class="col-md-12 form-group">
                        <label asp-for="@Model.Visina">Visina</label>
                        <input asp-for="@Model.Visina" type="text" class="form-control" disabled />
                    </div>
                    <div class="col-md-12 col-sm-12 form-group">
                        <label asp-for="@Model.Tezina">Tezina</label>
                        <input asp-for="@Model.Tezina" type="text" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-6" style="padding-right:0;padding-left:0">
                    <div class="col-md-12 col-sm-12 form-group">
                        <label asp-for="@Model.SpecijalniZahtjevi">Specijalni zahtjevi</label>
                        <textarea asp-for="@Model.SpecijalniZahtjevi" type="text" style="height:7.7em" class="form-control col-md-12" disabled></textarea>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12 form-group">
                    <label asp-for="@Model.KrvnaGrupa">Krvna grupa</label>
                    <input asp-for="@Model.KrvnaGrupa.Naziv" type="text" class="form-control col-md-12" disabled />
                </div>
                <div class="col-md-6 col-sm-12 form-group">
                    <label asp-for="@Model.Alergije">Alergije</label>
                    <br/>
                    <input asp-for="@Model.Alergije" type="text" class="form-control col-md-12" disabled />
                </div>
            </div>
            <div class="row">

                <div class="col-md-4">
                </div>

                <div class="col-md-4">
                    <a asp-action="Index" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-hand-point-left icons-margin-right"></i>Nazad</a>
                </div>

                <div class="col-md-4">
                </div>
            </div>
            <br/>

        </div>
</div>