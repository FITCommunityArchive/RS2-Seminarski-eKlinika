@model Korisnici
@{
    ViewData["Title"] = "Pacijent";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Odjel za pacijente</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-md-5">
                <a asp-action="Profil" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-user icons-margin-right"></i>@Model.Ime @Model.Prezime</a>
            </div>

            <div class="col-md-5">
                <a asp-action="Uredi" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-wrench icons-margin-right"></i>Uredi Profil</a>
            </div>

            <div class="col-md-2">
                <a asp-action="Uplata" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-dollar-sign icons-margin-right"></i>Uplate</a>
            </div>

            <div class="col-md-2">
                <a asp-action="Uputnica" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-arrow-right icons-margin-right"></i>Uputnica</a>
            </div>

            <div class="col-md-2">
                <a asp-action="Pregled" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="far fa-eye icons-margin-right"></i>Pregledi</a>
            </div>
        </div>
    </div>
</div>
<style>
    .col-md-5 {
        margin-left: 40px;
    }

    .col-md-2 {
        margin-top: 20px;
    }

    .col-md-5 + .col-md-2 {
        margin-left: 20%;
    }
</style>
