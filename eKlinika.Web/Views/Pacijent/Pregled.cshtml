@model eKlinika.ViewModels.PregledIndexListVM
@{
    ViewData["Title"] = "Pregledi";
}

<div class="container mainContainer">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
            <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
        </div>
        <div class="col-md-8 dodajHeaderDiv">
            <h1>Pregled nalaza</h1>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Datum pregleda</th>
                <th>Tip pregleda</th>
                <th>Napomena</th>
                <th>Prioritet</th>
                <th>Datum rezervacije</th>
                <th>Med. sestra</th>
                <th>Doktor</th>

            </tr>
        </thead>

        <tbody>
            @{
                foreach (var item in Model.Pregledi)
                {
                    <tr>
                        <td>@item.DatumPregleda</td>
                        <td>@item.TipPregleda</td>
                        <td>@item.Napomena</td>
                        <td>@item.Prioritet</td>
                        <td>@item.DatumRezervacije</td>
                        <td>@item.MedSestra</td>
                        <td>@item.Doktor</td>

                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="row">

        <div class="col-md-4">
        </div>

        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-hand-point-left icons-margin-right"></i>Nazad</a>
        </div>

        <div class="col-md-4">
        </div>
    </div>
</div>