@model eKlinika.ViewModels.UputnicaPrikaziVM
@{
    ViewData["Title"] = "Pregled uputnica";
}
<div class="row">
    <div class="container mainContainer">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
                <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
            </div>
            <div class="col-md-8 dodajHeaderDiv">
                <h1>Pregled uputnica</h1>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Uputio ljekar</th>
                    <th>Laboratorijski ljekar</th>
                    <th>Vrsta pretrage</th>
                    <th>Datum evidentiranja rezultata pretrage</th>
                    <th>Nalaz gotov</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Uputnice)
                {
                    <tr>
                        <td>@r.UputioLjekar</td>
                        <td>@r.LabLjekar</td>
                        <td>@r.VrstaPretrage</td>
                        <td>@(r.DatumRezultata == null ? "(nema rezultata)" : r.DatumRezultata.Value.ToShortDateString())</td>
                        <td>
                            @if (r.IsGotovNalaz == true)
                            {
                                @:✔
                            }
                            else
                            {
                                @:X
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">

            <div class="col-md-4">
            </div>

            <div class="col-md-4">
                <a asp-action="Index" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-hand-point-left icons-margin-right"></i>Nazad</a>
            </div>

            <div class="col-md-4">
            </div>
        </div>
    </div>
</div>