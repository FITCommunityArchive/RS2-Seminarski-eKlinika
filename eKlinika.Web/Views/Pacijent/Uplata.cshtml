@model eKlinika.ViewModels.PacijentUplataVM
@{
    ViewData["Title"] = "Uplate";
}

<div class="row">
    <div class="container mainContainer">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12 picDiv">
                <img src="~/images/logo.png" class="img-responsive img-circle logoPicture" />
            </div>
            <div class="col-md-8 dodajHeaderDiv">
                <h1>Pregled uplata</h1>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Datum uplate</th>
                    <th>Iznos</th>
                    <th>Namjena</th>
                    <th>Broj Uplatnice</th>
                    <th>Žiro Račun</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.rows)
                {
                    <tr>
                        <td>@r.DatumUplate.ToShortDateString()</td>
                        <td>@r.Iznos.ToString("0.00") KM</td>
                        <td>@r.Namjena</td>
                        <td>@r.BrojUplatnice</td>
                        <td>@r.ZiroRacun</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">

            <div class="col-md-4">
            </div>

            <div class="col-md-4">
                <a asp-action="Index" asp-controller="Pacijent" class="btn btn-danger col-md-12 font-sizes"><i class="fas fa-hand-point-left icons-margin-right"></i>Nazad</a>
            </div>

            <div class="col-md-4">
            </div>
        </div>
    </div>
</div>