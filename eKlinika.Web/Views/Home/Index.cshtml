@{
    ViewData["Title"] = "Home Page";

    var user = Context.GetLogiraniKorisnik();

    var role = (user != null ? Context.GetUlogaKorisnika().Naziv : "");
}

<div class="container">
    <div class="row homePageHeader">
        <div class="col-md-12">
            <div class="col-md-12">
                <img src="~/images/logo.png" class="col-md-4 col-md-offset-4 img-responsive img-circle" />
                <h1 class="col-md-12">Dobrodošli na eKliniku. Vaše zdravlje, naša briga!</h1>
            </div>

        </div>
    </div>
    <div class="row">
        @if (role == "Administrator")
        {
            <a asp-action="Index" asp-controller="Referent" class="col-md-3">
                <div class="col-md-12 homePageDivs">
                    <img src="~/images/patitent-home.png" class="col-md-12 img-responsive" />
                    <h4>Odjel za referente</h4>
                </div>
            </a>
        }
        else
        {
            <a asp-action="Index" asp-controller="Pacijent" class="col-md-3">
                <div class="col-md-12 homePageDivs">
                    <img src="~/images/patitent-home.png" class="col-md-12 img-responsive" />
                    <h4>Odjel za pacijente</h4>
                </div>
            </a>
        }
        <a asp-action="LandingPage" asp-controller="Pregledi" class="col-md-3">
            <div class="col-md-12 homePageDivs">
                <img src="~/images/staff-home.jpg" class="col-md-12 img-responsive" />
                <h4>Odjel za osoblje</h4>
            </div>
        </a>
        <a asp-action="Index" asp-controller="Apoteka" class="col-md-3">
            <div class="col-md-12 homePageDivs">
                <img src="~/images/pharmacy-homepage.png" class="col-md-12 img-responsive" />
                <h4>Odjel za apoteku</h4>
            </div>
        </a>
        @if (role == "Administrator")
        {
            <a asp-action="Index" asp-controller="MedicinskaSestra" class="col-md-3">
                <div class="col-md-12 homePageDivs text-center">
                    <img src="~/images/Nurse.jpg" class="col-md-12 img-responsive" />
                    <h4>Odjel za medicinske sestre</h4>
                </div>
            </a>
        }
        else if (role == "MedicinskaSestra")
        {
            <a asp-action="Index" asp-controller="MedicinskaSestra" class="col-md-3">
                <div class="col-md-12 homePageDivs text-center">
                    <img src="~/images/Nurse.jpg" class="col-md-12 img-responsive" />
                    <h4>Odjel za admin. osoblje</h4>
                </div>
            </a>
        }
        else if (role == "Referent")
        {
            <a asp-action="Index" asp-controller="Referent" class="col-md-3">

                <div class="col-md-12 homePageDivs">
                    <img src="~/images/Nurse.jpg" class="col-md-12 img-responsive" />
                    <h4>Odjel za admin. osoblje</h4>
                </div>
            </a>
        }
        else
        {
            <a asp-action="Login" asp-controller="Account" class="col-md-3">

                <div class="col-md-12 homePageDivs">
                    <img src="~/images/Nurse.jpg" class="col-md-12 img-responsive" />
                    <h4>Odjel za admin. osoblje</h4>
                </div>
            </a>
        }
    </div>
    <div class="center-block">
        <h3>O nama – Stručni, profesionalni, iskusni i diskretni</h3>
        eKlinika počela je sa radom 1998. godine. Kao jedna od vodećih i najopremljenijih privatnih klinika u Sarajevu, brinemo se o zdravlju mnogobrojnih pacijenata. Zadovoljstvo naših pacijenata ogleda se u broju zdravstvenih kartona koji u našoj klinici danas prelazi cifru od 20.000!

        Naš tim sačinjavaju iskusni i priznati medicinski stručnjaci koji su prepoznati kao jedni od vodećih stručnjaka u svojim oblastima kako u BiH, tako i u inostranstvu. Pružamo usluge iz različitih medicinskih oblasti poput opće, porodične, sportske i interne medicine, radiologije, kardiologije itd.
    </div>


    <div>
        <div class="fusion-layout-column fusion_builder_column fusion_builder_column_1_3  fusion-one-third fusion-column-first 1_3" style="margin-top:30px;margin-bottom:20px;width:33.33%;width:calc(33.33% - ( ( 4% + 4% ) * 0.3333 ) );margin-right: 2%; display: inline-block;">
