                <div class="imageframe-align-center">
                    <span class="fusion-imageframe imageframe-none imageframe-4 hover-type-none">
                        <img src="~/images/patient02.jpg" width="90px" height="100px" alt="" title="" style="border-radius: 50%;">
                    </span>
                </div>
                <div class="fusion-sep-clear">
                </div>
                <div class="fusion-separator fusion-full-width-sep sep-single sep-solid" style="border-color:#f4f4f4;border-top-width:5px;margin-left: auto;margin-right: auto;margin-top:15px;margin-bottom:15px;width:100%;max-width:100%;">
                </div>
